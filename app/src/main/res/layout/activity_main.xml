<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/num0Btn"
        android:textSize="50sp"
        android:layout_width="192dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/decimalBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1Btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/decimalBtn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equalBtn"
        app:layout_constraintTop_toBottomOf="@+id/num3Btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/num1Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/num2Btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num4Btn" />

    <Button
        android:id="@+id/num3Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/equalBtn"
        app:layout_constraintTop_toBottomOf="@+id/num6Btn" />

    <Button
        android:id="@+id/equalBtn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="198dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumBtn" />

    <Button
        android:id="@+id/num2Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num3Btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/num1Btn"
        app:layout_constraintTop_toBottomOf="@+id/num5Btn"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/divideBtn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:text="/"
        app:layout_constraintEnd_toStartOf="@+id/multiplyBtn"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num7Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/num8Btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divideBtn" />

    <Button
        android:id="@+id/multiplyBtn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="12dp"
        android:text="*"
        app:layout_constraintEnd_toStartOf="@+id/subBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num9Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@+id/sumBtn"
        app:layout_constraintTop_toBottomOf="@+id/subBtn" />

    <Button
        android:id="@+id/subBtn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="12dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/clearBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearBtn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num8Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/num9Btn"
        app:layout_constraintTop_toBottomOf="@+id/multiplyBtn" />

    <Button
        android:id="@+id/num6Btn"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/sumBtn"
        app:layout_constraintTop_toBottomOf="@+id/num9Btn" />

    <Button
        android:id="@+id/num4Btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/num5Btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num7Btn" />

    <Button
        android:id="@+id/num5Btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/num6Btn"
        app:layout_constraintTop_toBottomOf="@+id/num8Btn" />

    <Button
        android:id="@+id/sumBtn"
        android:layout_width="90dp"
        android:textSize="50sp"
        android:layout_height="205dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clearBtn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

</androidx.constraintlayout.widget.ConstraintLayout>